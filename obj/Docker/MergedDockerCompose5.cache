services:
  liquibase:
    command:
    - liquibase
    - --url=jdbc:postgresql://screamerdb:5432/screamer
    - --changeLogFile=/changelog/changelog.sql
    - --username=admin
    - --password=admin
    - update
    container_name: pg_updater
    depends_on:
      screamerdb:
        condition: service_started
    image: liquibase/liquibase:4.7.0
    networks:
      default: null
    volumes:
    - type: bind
      source: /Users/titorianobroadus/Desktop/Screamer/liquibase
      target: /liquibase/changelog
      bind:
        create_host_path: true
  pgadmin:
    container_name: pgadmin4_container
    depends_on:
      screamerdb:
        condition: service_started
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@admin.com
      PGADMIN_DEFAULT_PASSWORD: admin
    image: dpage/pgadmin4
    networks:
      default: null
    ports:
    - mode: ingress
      target: 80
      published: 5050
      protocol: tcp
    restart: always
  screamer.webapi:
    build:
      context: /Users/titorianobroadus/Desktop/Screamer
      dockerfile: Screamer.WebApi/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Screamer.WebApi
      target: base
    container_name: Screamer.WebApi
    depends_on:
      screamerdb:
        condition: service_started
    entrypoint:
    - tail
    - -f
    - /dev/null
    environment:
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DB_CONNECTION_STRING: host=screamerdb;port=5432;database=screamer;username=admin;password=admin
      DOTNET_USE_POLLING_FILE_WATCHER: "1"
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: screamer:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/net6.0/Screamer.WebApi.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    networks:
      default: null
    ports:
    - mode: ingress
      target: 80
      published: 80
      protocol: tcp
    tty: true
    volumes:
    - type: bind
      source: /Users/titorianobroadus/Desktop/Screamer/Screamer.WebApi
      target: /app
      bind:
        create_host_path: true
    - type: bind
      source: /Users/titorianobroadus/Desktop/Screamer
      target: /src
      bind:
        create_host_path: true
    - type: bind
      source: /Users/titorianobroadus/vsdbg/vs2017u5
      target: /remote_debugger
      bind:
        create_host_path: true
    - type: bind
      source: /Users/titorianobroadus/.nuget/packages/
      target: /root/.nuget/packages
      read_only: true
      bind:
        create_host_path: true
    - type: bind
      source: /usr/local/share/dotnet/sdk/NuGetFallbackFolder
      target: /root/.nuget/fallbackpackages
      read_only: true
      bind:
        create_host_path: true
  screamerdb:
    container_name: screamerdb
    environment:
      POSTGRES_DB: screamer
      POSTGRES_PASSWORD: admin
      POSTGRES_USER: admin
    healthcheck:
      test:
      - CMD-SHELL
      - pg_isready -q -d $$POSTGRES_DB -U $$POSTGRES_USER
      timeout: 45s
      interval: 10s
      retries: 10
    image: postgres:13.1
    networks:
      default: null
    ports:
    - mode: ingress
      target: 5432
      published: 5432
      protocol: tcp
    restart: always
    volumes:
    - type: bind
      source: /Users/titorianobroadus/Desktop/Screamer/db
      target: /docker-entrypoint-initdb.d
      bind:
        create_host_path: true
networks:
  default:
    name: dockercompose11335959959557189815_default